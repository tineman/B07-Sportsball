<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.b07sportsballs">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.B07sportsballs"
        tools:targetApi="31">
        <activity
            android:name=".AdminHomePage"
            android:exported="false" />
        <activity
            android:name=".CustomerHomePage"
            android:exported="false"
            android:parentActivityName=".CustomerLoginScreen"/>
        <activity
            android:name=".CustomerSignUpScreen"
            android:exported="false" />
        <activity
            android:name=".CustomerLoginScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScheduleEventScreen"
            android:exported="false" />
        <activity
            android:name=".VenueScreen"
            android:exported="false" />
    </application>

</manifest>