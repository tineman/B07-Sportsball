<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerLoginScreen">

    <TextView
        android:id="@+id/CustomerLoginScreen_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/CustomerLoginScreen_title"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_TextView_Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/CustomerLoginScreen_TextView_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CustomerLoginScreen_password"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_EditText_Password"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_TextView_Username"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_TextView_Username"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_EditText_Username" />

    <EditText
        android:id="@+id/CustomerLoginScreen_EditText_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/CustomerLoginScreen_enter_password"
        android:inputType="textPersonName"
        android:minWidth="300dp"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_Button_Login"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_EditText_Username"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_EditText_Username"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_TextView_Password" />

    <EditText
        android:id="@+id/CustomerLoginScreen_EditText_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/CustomerLoginScreen_enter_username"
        android:inputType="textPersonName"
        android:minWidth="300dp"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_TextView_Password"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_TextView_Username"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_TextView_Username"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_TextView_Username" />

    <TextView
        android:id="@+id/CustomerLoginScreen_TextView_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CustomerLoginScreen_username"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_EditText_Username"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_TextView_Title"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_TextView_Title"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_TextView_Title"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/CustomerLoginScreen_Button_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/CustomerLoginScreen_login"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_Button_GoToAdmin"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_TextView_Password"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_TextView_Password"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_EditText_Password" />

    <Button
        android:id="@+id/CustomerLoginScreen_Button_GoToAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CustomerLoginScreen_login_as_an_admin"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_Button_Register"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_Button_Login"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_Button_Login"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_Button_Login" />

    <Button
        android:id="@+id/CustomerLoginScreen_Button_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="displayCustomerSignUpScreen"
        android:text="@string/CustomerLoginScreen_register_customer_account"
        app:layout_constraintBottom_toTopOf="@+id/CustomerLoginScreen_Button_Quit"
        app:layout_constraintEnd_toEndOf="@+id/CustomerLoginScreen_Button_GoToAdmin"
        app:layout_constraintStart_toStartOf="@+id/CustomerLoginScreen_Button_GoToAdmin"
        app:layout_constraintTop_toBottomOf="@+id/CustomerLoginScreen_Button_GoToAdmin" />

    <Button
        android:id="@+id/CustomerLoginScreen_Button_Quit"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="quitApp"
        android:text="@string/CustomerLoginScreen_quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>